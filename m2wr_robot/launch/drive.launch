<?xml version="1.0" encoding="UTF-8"?>
<launch>
    <arg name="model" default="$(find m2wr_robot)/urdf/m2wr.xacro"/>
    <param name="robot_description" command="$(find xacro)/xacro $(arg model) --inorder" />

    <arg name="x" default="0"/>
    <arg name="y" default="0"/>
    <arg name="z" default="0.5"/>

    <node name="mybot_spawn" pkg="gazebo_ros" type="spawn_model" output="screen"
          args="-urdf -param robot_description -model m2wr -x $(arg x) -y $(arg y) -z $(arg z)" />

    <rosparam command="load" file="$(find m2wr_robot)/config/diff_drive_controller.yaml" ns="/m2wr" />
    <node name="controller_spawner" pkg="controller_manager" type="spawner" respawn="false" output="screen" ns="/m2wr"
      args="diff_drive_controller" />
</launch>
